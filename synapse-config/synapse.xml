<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
	<api context="/order" name="StarbucksOrderAPI" xmlns:sb="http://starbucks.example.org"
		xmlns:ucsb="http://ws.cs.ucsb.edu" xmlns:xsd="http://ws.cs.ucsb.edu/xsd">
		<resource methods="POST" url-mapping="/">
			<inSequence>
				<property expression="$axis2:SERVICE_PREFIX" name="STARBUCKS_HOST_NAME" />
				<payloadFactory>
					<format>
						<ucsb:addOrder xmlns:ucsb="http://ws.cs.ucsb.edu">
							<ucsb:order>
								<xsd:additions xmlns:xsd="http://ws.cs.ucsb.edu/xsd">$1</xsd:additions>
								<xsd:name xmlns:xsd="http://ws.cs.ucsb.edu/xsd">$2</xsd:name>
							</ucsb:order>
						</ucsb:addOrder>
					</format>
					<args>
						<arg expression="//sb:drink" />
						<arg expression="//sb:additions" />
					</args>
				</payloadFactory>
				<header action="set" name="Action" value="urn:addOrder" />
				<send>
					<endpoint key="ServiceEndpoint" />
				</send>
			</inSequence>
			<outSequence>
				<property name="HTTP_SC" scope="axis2" value="201" />
				<property expression="//xsd:orderId" name="uri.var.orderId" />
				<sequence key="StarbucksOrderInfo" />
				<send />
			</outSequence>
		</resource>
		<resource methods="GET PUT DELETE" uri-template="/{orderId}">
			<inSequence>
				<property expression="$axis2:SERVICE_PREFIX" name="STARBUCKS_HOST_NAME" />
				<switch source="$ctx:REST_METHOD">
					<case regex="PUT">
						<payloadFactory>
							<format>
								<ucsb:updateOrder>
									<ucsb:order>
										<xsd:orderId>$1</xsd:orderId>
										<xsd:name>$2</xsd:name>
										<xsd:additions>$3</xsd:additions>
									</ucsb:order>
								</ucsb:updateOrder>
							</format>
							<args>
								<arg expression="$ctx:uri.var.orderId" />
								<arg expression="//sb:drink" />
								<arg expression="//sb:additions" />
							</args>
						</payloadFactory>
						<header action="set" name="Action" value="urn:updateOrder" />
					</case>
					<case regex="DELETE">
						<payloadFactory>
							<format>
								<ucsb:deleteOrder>
									<ucsb:orderId>$1</ucsb:orderId>
								</ucsb:deleteOrder>
							</format>
							<args>
								<arg expression="$ctx:uri.var.orderId" />
							</args>
						</payloadFactory>
						<header action="set" name="Action" value="urn:deleteOrder" />
					</case>
					<default>
						<payloadFactory>
							<format>
								<ucsb:getOrder>
									<ucsb:orderId>$1</ucsb:orderId>
								</ucsb:getOrder>
							</format>
							<args>
								<arg expression="$ctx:uri.var.orderId" />
							</args>
						</payloadFactory>
						<header action="set" name="Action" value="urn:getOrder" />
					</default>
				</switch>
				<property name="HTTP_METHOD" scope="axis2" value="POST" />
				<send>
					<endpoint key="ServiceEndpoint" />
				</send>
			</inSequence>
			<outSequence>
				<filter xpath="//xsd:orderId">
					<then>
						<sequence key="StarbucksOrderInfo" />
					</then>
					<else>
						<sequence key="StarbucksMissingOrder" />
					</else>
				</filter>
				<send/>				
			</outSequence>
		</resource>
	</api>
</definitions>
